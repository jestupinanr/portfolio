---
import { Image } from "astro:assets";
import profile from "../../assets/images/profile.webp";
import Button from "../common/Button.astro";
---

<div class="flex flex-col gap-5">
    <!-- first column -->
    <div class="grid grid-cols-3 gap-5">
      <div class="bg-primary rounded-[20px] flex flex-col justify-center items-center text-white font-extrabold relative py-2 drop-shadow">
        <p class="text-[64px] gradient-text">5</p>
        <span class="text-secondary text-[64px] gradient-text-secondary absolute left-4 -top-5">+</span>
        <span>Experiencia</span>
      </div>
      <div class="bg-primary rounded-[20px] flex flex-col justify-center items-center text-white font-extrabold relative py-2 drop-shadow">
        <p class="text-[64px] gradient-text">5</p>
        <span class="text-secondary text-[64px] gradient-text-secondary absolute left-4 -top-5">+</span>
        <span>Experiencia</span>
      </div>
      <div class="bg-primary rounded-[20px] flex flex-col justify-center items-center text-white font-extrabold relative py-2 drop-shadow">
        <p class="text-[64px] gradient-text">5</p>
        <span class="text-secondary text-[64px] gradient-text-secondary absolute left-4 -top-5">+</span>
        <span>Experiencia</span>
      </div>
    </div>
    <!-- my information -->
    <div class="bg-primary rounded-[20px] drop-shadow py-5 flex flex-col px-5 gap-5">
      <div class="flex gap-3">
        <img
          src={profile.src}
          alt="profile"
          class="w-32 h-32 rounded-full"
        />
        <div class="flex flex-col gap-4 justify-center">
          <div class="flex bg-[#34353A] rounded-md gap-2 px-2 py-1 justify-center items-center">
            <div class="w-2 h-2 bg-green rounded-full"></div>
            <span class="text-[8px] text-white font-normal">Disponible para trabajar</span>
          </div>
          <div class="flex flex-col gap-2">
            <p class="text-white text-xs">Juan Diego Estupi√±an</p>
            <p class="text-[#9E9E9E] text-[10px]">Desarrollador full-stack</p>
          </div>
        </div>
      </div>
      <div class="bg-[#1C1C1E] rounded-[10px] w-full py-2 px-4 flex gap-4">
        <div class="bg-gray rounded-[5px] font-normal text-white text-[10px] px-2">
          <span>Ingeniero de software</span>
        </div>
        <div class="bg-gray rounded-[5px] font-normal text-white text-[10px] px-2">
          <span>Colombia</span>
        </div>
      </div>
      <div class="grid grid-cols-2 gap-5">
        <Button text="Whatsapp" />
        <Button text="Email" />
      </div>
    </div>
  </div>