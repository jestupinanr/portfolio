      <button class="border border-secondary flex justify-center items-center text-secondary py-3 px-9 w-auto">
        Contacto
      </button>
    </div>
  </div>
  <div class="bg-secondary flex justify-center items-end">
    <img
      src={bannerPhoto.src}
      alt="banner"
      class="w-52 h-52 lg:w-[27rem] lg:h-[30rem]"
    />
  </div>
</section>